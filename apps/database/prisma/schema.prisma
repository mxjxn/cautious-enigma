// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  fid       Int      @unique
  username  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  gamesAsPlayer1 Game[] @relation("Player1")
  gamesAsPlayer2 Game[] @relation("Player2")
}

model Game {
  id            String    @id @default(cuid())
  turn          Int       @default(1)
  currentTeam   String    @default("player") // 'player' or 'enemy'
  gridWidth     Int       @default(10)
  gridHeight    Int       @default(8)
  isGameOver    Boolean   @default(false)
  winner        String?   // 'player' or 'enemy'
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  player1Id     String?
  player1       User?     @relation("Player1", fields: [player1Id], references: [id])
  player2Id     String?
  player2       User?     @relation("Player2", fields: [player2Id], references: [id])
  
  units         Unit[]
  moves         Move[]
}

model Unit {
  id              String   @id @default(cuid())
  gameId          String
  game            Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  
  name            String
  team            String   // 'player' or 'enemy'
  positionX       Int
  positionY       Int
  hp              Int
  maxHp           Int
  actionPoints    Int
  maxActionPoints Int
  moveRange       Int
  attackRange     Int
  attackDamage    Int
  isAlive         Boolean  @default(true)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  movesFrom       Move[]   @relation("AttackerMoves")
  movesTo         Move[]   @relation("DefenderMoves")
}

model Move {
  id          String   @id @default(cuid())
  gameId      String
  game        Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)
  
  unitId      String
  unit        Unit     @relation("AttackerMoves", fields: [unitId], references: [id], onDelete: Cascade)
  
  moveType    String   // 'move' or 'attack'
  fromX       Int
  fromY       Int
  toX         Int
  toY         Int
  
  targetId    String?
  target      Unit?    @relation("DefenderMoves", fields: [targetId], references: [id])
  
  damage      Int?
  turnNumber  Int
  
  createdAt   DateTime @default(now())
}
